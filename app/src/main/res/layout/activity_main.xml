<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বর্ণ শেখার মাধ্যম"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:paddingLeft="15dp"/>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/shorborno"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/shorbornoImageButton"/>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/banjyonborno"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/banjyonbornoImageButton"/>
            <ImageButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/shongkkha"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:id="@+id/shongkkhaImageButton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="কপিরাইট ©"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:paddingLeft="30dp"/>
        </LinearLayout>

    </RelativeLayout>


</ScrollView>